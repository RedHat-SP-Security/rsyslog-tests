description: Orchestrated test example
contact: Dalibor Pospíšil <dapospis@redhat.com>
duration: 5m
enabled: false
adjust:
  - when: orchestrated==1
    enabled: true
/controller:
    require:
      - library(ControlFlow/Cleanup)
      - library(ControlFlow/SessionControl)
    test: ./runtest.sh
    extra-nitrate: TC#615829
/role:
    framework: shell
    test: "true"
    /server:
        require:
          - rsyslog
        extra-nitrate: TC#615831
    /client:
        require:
          - rsyslog
        extra-nitrate: TC#615830
