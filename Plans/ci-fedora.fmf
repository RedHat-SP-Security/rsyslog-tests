summary: test plan for rsyslog CI testing targeting Fedora

prepare:
  - how: shell
    script:
     - systemctl disable --now dnf-makecache.service || true
     - systemctl disable --now dnf-makecache.timer || true
     - dnf makecache

discover:
  - name: Upstream_rsyslog_tests
    how: fmf
    url: https://github.com/RedHat-SP-Security/rsyslog-tests
    ref: master
    test:
      - /Regression
      - /Sanity
    filter: 'tag: fedora-wanted'

execute:
    how: tmt